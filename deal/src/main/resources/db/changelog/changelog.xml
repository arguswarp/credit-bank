<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="create_table_client" author="Maxim Chistyakov">
        <createTable tableName="client">
            <column name="client_id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="client_pkey"/>
            </column>
            <column name="first_name" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="middle_name" type="VARCHAR(30)"/>
            <column name="birth_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="VARCHAR(15)"/>
            <column name="marital_status" type="VARCHAR(20)"/>
            <column name="dependent_amount" type="INT"/>
            <column name="account_number" type="VARCHAR(50)"/>
            <column name="passport" type="JSONB">
                <constraints unique="true"/>
            </column>
            <column name="employment" type="JSONB">
                <constraints unique="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create_table_credit" author="Maxim Chistyakov">
        <createTable tableName="credit">
            <column name="credit_id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="credit_pkey"/>
            </column>
            <column name="amount" type="decimal">
                <constraints nullable="false"/>
            </column>
            <column name="term" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="monthly_payment" type="decimal">
                <constraints nullable="false"/>
            </column>
            <column name="rate" type="decimal">
                <constraints nullable="false"/>
            </column>
            <column name="psk" type="decimal">
                <constraints nullable="false"/>
            </column>
            <column name="payment_schedule" type="JSONB">
                <constraints nullable="false"/>
            </column>
            <column name="insurance_enabled" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="salary_client" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="credit_status" type="VARCHAR(15)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create_table_statement" author="Maxim Chistyakov">
        <createTable tableName="statement">
            <column name="statement_id" type="uuid">
                <constraints nullable="false" primaryKey="true" primaryKeyName="statement_pkey"/>
            </column>
            <column name="client_id" type="uuid">
                <constraints referencedColumnNames="client_id"
                             referencedTableName="client"
                             foreignKeyName="statement_client_id_fkey" deleteCascade="true"/>
            </column>
            <column name="credit_id" type="uuid">
                <constraints unique="true"
                             referencedColumnNames="credit_id"
                             referencedTableName="credit"
                             foreignKeyName="statement_credit_id_fkey" deleteCascade="true"/>
            </column>
            <column name="status" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="applied_offer" type="JSONB"/>
            <column name="sign_date" type="timestamp"/>
            <column name="ses_code" type="VARCHAR(50)"/>
            <column name="status_history" type="JSONB"/>
        </createTable>
    </changeSet>

</databaseChangeLog>